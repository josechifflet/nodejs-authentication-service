{
  "name": "authentication-service",
  "version": "1.0.1",
  "description": "Highly secure API for authentication as a service",
  "license": "MIT",
  "private": true,
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc --noEmit",
    "node-esm": "node --no-warnings=ExperimentalWarning --loader ts-node/esm -r dotenv/config",
    "migrate": "yarn prisma migrate dev && yarn ts-node-dev cli/seed-data",
    "genkeys": "yarn node-esm cli/gen-keys",
    "reminder": "yarn node-esm cli/reminder",
    "collision-test": "yarn node-esm cli/collision-test",
    "otp-speed": "yarn node-esm cli/otp-speed",
    "match-totps": "yarn node-esm cli/match-totps",
    "dev": "yarn node-esm src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "prettier-check": "prettier --check src cli",
    "prettier-write": "prettier --write src cli",
    "eslint-check": "eslint src cli",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && yarn eslint-check && yarn type-check",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "test:int": "./scripts/run-int-test.sh",
    "test:unit": "./scripts/run-unit-test.sh",
    "test:int:ui": "vitest -c ./vitest.config.integration.ts --ui",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui"
  },
  "dependencies": {
    "@prisma/client": "5.14.0",
    "argon2": "^0.40.1",
    "bullmq": "^5.7.10",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "device-detector-js": "^3.0.3",
    "dotenv": "^16.0.1",
    "env-var": "^7.1.1",
    "express": "^4.18.1",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.0",
    "express-slow-down": "^2.0.3",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.4.1",
    "jose": "^5.3.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.7.5",
    "otpauth": "^9.2.4",
    "pug": "^3.0.2",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.14",
    "request-ip": "^3.3.0",
    "toobusy-js": "^0.5.1",
    "winston": "^3.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/express-slow-down": "^1.3.2",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^9.0.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/rate-limit-redis": "^3.0.0",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.2",
    "@types/toobusy-js": "^0.5.2",
    "dpdm": "^3.9.0",
    "eslint": "9.x",
    "globals": "^15.3.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0",
    "vitest": "^1.6.0"
  }
}
